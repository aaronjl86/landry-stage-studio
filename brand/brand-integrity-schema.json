    "visualRegressionPassRate": {"type":"number","minimum":0,"maximum":1},
    "adoptionRateFigma": {"type":"number","minimum":0,"maximum":1},
    "tokenUsageCompliance": {"type":"number","minimum":0,"maximum":1},
    "motionConformance": {"type":"number","minimum":0,"maximum":1},
    "brandIntegrityIndex": {"type":"number","description":"Composite 0â€“100"},
    "auditNotes": {"type":"string"},
